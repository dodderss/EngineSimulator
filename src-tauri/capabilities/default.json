{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:window:allow-start-dragging",
    "core:window:default",
    "core:window:allow-close",
    "core:window:allow-minimize",
    "core:window:allow-maximize",
    "fs:default",
    "fs:allow-write-text-file",
    "fs:allow-read-text-file",
    "fs:allow-create",
    "fs:allow-app-write",
    "fs:allow-app-read",
    "fs:allow-write",
    "fs:allow-read",
    "fs:allow-write-file",
    "fs:allow-read-file",
    "fs:write-all",
    "fs:read-all",
    "deep-link:default",
    "core:resources:default",
    "core:event:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$AppLocalData"
        },
        {
          "path": "$AppLocalData/**"
        },
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://*"
        },
        {
          "url": "https://*"
        },
        {
          "url": "http://127.0.0.1:5000/**"
        }
      ]
    },
    "dialog:default",
    "fs:allow-open",
    "store:default",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "store:allow-load",
    "process:default",
    "http:default"
  ]
}